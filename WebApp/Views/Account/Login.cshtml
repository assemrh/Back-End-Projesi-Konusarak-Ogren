@model LoginModel
@{ 
    ViewData["Title"] = "Login Page";
    Layout = "_Layout2"; 
}


<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
        <div class="card bg-secondary border-0 mb-0">

            <div class="card-body px-lg-5 py-lg-5">
                <div class="text-center mb-4">
                    <strong>sign in</strong>
                </div>
                <form role="form" method="post" asp-area="" asp-controller="Account" asp-action="Login">
                    <div class="alert-danger" asp-validation-summary="All"></div>

                    <div class="form-group mb-3">
                        <div class="input-group input-group-merge input-group-alternative">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                            </div>
                            <input class="form-control" placeholder="Email" type="email" asp-for="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group input-group-merge input-group-alternative">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                            </div>
                            <input class="form-control" placeholder="Password" type="password" asp-for="Password">
                        </div>
                    </div>
                    <div class="custom-control custom-control-alternative custom-checkbox">
                        <input class="custom-control-input" id="RememberMeCheck" asp-for="RememberMe" type="checkbox">
                        <label class="custom-control-label" for="RememberMeCheck">
                            <span class="text-muted">Remember me</span>
                        </label>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary my-4">Sign in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

